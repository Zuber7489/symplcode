      "label": "Image"
    } ,
 {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
 {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
 
         
      ]
    }
  
    
     
  ], 
  "settings": [

 
 {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
{
      "type": "richtext",
      "id": "text",
      "label": "text"
    }
 
    
  ],
  "presets": [
    {
      "name": "Main Press"
    }
  ]
}
{% endschema %}
