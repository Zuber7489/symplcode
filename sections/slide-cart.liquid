// Function to update free shipping progress
function updateFreeShippingProgress(cartTotal) {
  // Uses the global variable set from Liquid template - NO NEED TO CHANGE HERE
  var freeShippingThreshold = window.FREE_SHIPPING_THRESHOLD;
  var remainingAmount = freeShippingThreshold - cartTotal;
  var progressPercentage = Math.min(100, (cartTotal * 100) / freeShippingThreshold);
  
  if (remainingAmount > 0) {
    $('.free-shipping-progress-text').html('Almost there! Add $' + (remainingAmount / 100).toFixed(2) + ' more for free shipping');
  } else {
    $('.free-shipping-progress-text').html('<span class="free-shipping-achieved">You got free shipping!</span>');
  }
  
  $('.progress-bar').css('width', progressPercentage + '%');
}

// Function to update total savings display in checkout section
function updateTotalSavingsDisplay(cart) {
  var totalSavings = 0;

  // Use cart.total_discount as the primary source of savings
  // This includes both individual item discounts and cart-level discounts
  if (cart.total_discount > 0) {
    totalSavings = cart.total_discount;
  } else {
    // Fallback: calculate individual item savings if total_discount is not available
    if (cart.items && cart.items.length > 0) {
      for (var i = 0; i < cart.items.length; i++) {
        var item = cart.items[i];
        if (item.original_price > item.price) {
          var itemSavings = (item.original_price - item.price) * item.quantity;
          totalSavings += itemSavings;
        }
      }
    }
  }

  // Update savings display in checkout section
  if (totalSavings > 0) {
    $('#savings-display').show();
    $('#savings-amount').text(formatMoney(totalSavings));
  } else {
    $('#savings-display').hide();
  }
  
  // Also update applied discounts display
  updateAppliedDiscountsDisplay(cart);
}

// Optimized function to refresh bundle products - debounced and lightweight
var bundleRefreshTimeout = null;
function refreshBundleProducts(cart) {
  // Clear existing timeout to debounce multiple calls
  if (bundleRefreshTimeout) {
    clearTimeout(bundleRefreshTimeout);
  }
  
  // Debounce bundle refresh to prevent excessive requests
  bundleRefreshTimeout = setTimeout(function() {
    // Only refresh if cart has items and bundle section exists
    if (!cart || cart.item_count === 0) {
      return;
    }
    
    // Check if bundle section exists before making request
    if ($('.bundle-save-section').length === 0) {
      return;
    }
    
    // Use lightweight AJAX to fetch only bundle section
    $.ajax({
      type: "GET",
      url: "/cart",
      dataType: "html",
      cache: false,
      timeout: 5000, // 5 second timeout to prevent hanging
      success: function(html) {
        var $cartHtml = $(html);
        var $newBundleSection = $cartHtml.find('.bundle-save-section');

        if ($newBundleSection.length > 0) {
          // Replace the current bundle section with the fresh one from server
          $('.bundle-save-section').replaceWith($newBundleSection);

          // Re-initialize bundle functionality after refresh (lightweight)
          setTimeout(function() {
            initializeBundleFunctionality();
            // Refresh availability after initialization
            setTimeout(function() {
              refreshBundleProductAvailability();
            }, 300);
          }, 50); // Reduced delay for faster initialization
        }
      },
      error: function(xhr, status, error) {
        // Silently fail - don't spam console on network errors
        if (status !== 'timeout' && status !== 'abort') {
          console.error('Error refreshing bundle products:', error);
        }
      }
    });
  }, 300); // 300ms debounce to batch multiple calls
}

