  });
}

// Function to check and remove bundle discounts when parent items are removed
function checkAndRemoveBundleDiscounts(cart) {
  // Check if any items have bundle-related properties or discount codes
  var hasBundleItems = false;
  var hasDiscountCodes = false;
  
  if (cart.items) {
    for (var i = 0; i < cart.items.length; i++) {
      var item = cart.items[i];
      
      // Check for bundle properties
      if (item.properties && (item.properties['bundle_parent'] || item.properties['bundle_child'])) {
        hasBundleItems = true;
      }
      
      // Check for discount codes on items
      if (item.discounts && item.discounts.length > 0) {
        hasDiscountCodes = true;
      }
    }
  }
  
  // Check for cart-level discount codes
  if (cart.discount_codes && cart.discount_codes.length > 0) {
    hasDiscountCodes = true;
  }
  
  // If we have bundle items or discount codes, trigger a lighter cart refresh
  // Only do aggressive refresh if truly needed
  if (hasBundleItems && hasDiscountCodes) {
    console.log('Bundle items AND discount codes detected, light refresh to recalculate');
    
    // Use a lighter refresh approach - only update prices, not full HTML
    setTimeout(function() {
      updateAllItemPrices(cart);
      updateTotalSavingsDisplay(cart);
    }, 100);
  } else if (hasDiscountCodes) {
    // Just update totals and savings if only discount codes (no bundle items)
    updateTotalSavingsDisplay(cart);
  } else {
    // If no bundle items or discount codes, update all remaining items' prices
    updateAllItemPrices(cart);
  }
}

