/**
 * KITE FREE GIFT WIDGET - Hide MAIN DIV when button is gray/disabled
 * ONLY IN SLIDE CART - Does not affect product page widgets
 * Targets: gfgFreeGiftMsgParentContainerForDropDown (main Kite widget container)
 * 
 * FIXED: Prevents duplicate observers and widget reappearing repeatedly
 */
(function() {
  'use strict';
  
  // Store observer reference globally to prevent duplicates
  let kiteWidgetObserver = null;
  let isObserverInitialized = false;
  let checkTimeoutIds = [];
  
  /**
   * Check and hide/show the Kite widget based on button state
   */
  function checkAndHideMainDiv() {
    // IMPORTANT: Only target widgets inside the slide cart, not product pages
    const slideCart = document.querySelector('.r-side-cart') || 
                      document.querySelector('#custom-cart') ||
                      document.querySelector('.cart-app-blocks');
    
    if (!slideCart) {
      // Slide cart not found, don't do anything (might be on product page)
      return;
    }
    
    // Find ALL Kite widget containers to handle duplicates
    const kiteWidgets = slideCart.querySelectorAll('.gfgFreeGiftMsgParentContainerForDropDown, .gfgFreeGiftSideCartWrapperV4, [class*="gfgFreeGiftMsgParent"]');
    
    if (kiteWidgets.length === 0) {
      // No widgets found yet, wait
      return;
    }
    
    // Process each widget found (in case of duplicates)
    kiteWidgets.forEach(function(mainKiteDiv) {
      // Verify it's actually inside the slide cart (double check)
      if (!slideCart.contains(mainKiteDiv)) {
        // Widget is not in slide cart, skip (might be on product page)
        return;
      }
      
      // Find the Claim button inside the main div
      const claimButton = mainKiteDiv.querySelector('.gfgFreeGiftInvalidProductClaimButton') ||
                         mainKiteDiv.querySelector('.gfgFreeGiftClaimButton') ||
                         mainKiteDiv.querySelector('button');
      
      if (claimButton) {
        const computedStyle = window.getComputedStyle(claimButton);
        const bgColor = computedStyle.backgroundColor;
        
        // Check if button is gray (disabled state)
        // Gray: rgb(229, 229, 229) = #e5e5e5
        // Black: rgb(26, 26, 26) or rgb(0, 0, 0)
        
        const isGray = bgColor.includes('229') || // rgb(229, 229, 229)
                       bgColor === 'rgb(229, 229, 229)' ||
                       bgColor === '#e5e5e5' ||
                       claimButton.classList.contains('gfgFreeGiftInvalidProductClaimButton') ||
                       computedStyle.pointerEvents === 'none';
        
        if (isGray) {
          // Button is gray/disabled - HIDE MAIN DIV (only in slide cart)
          mainKiteDiv.style.display = 'none';
          console.log('‚ùå Hiding Kite widget in slide cart - Button is gray');
        } else {
          // Button is black/active - SHOW MAIN DIV
          mainKiteDiv.style.display = 'block';
          console.log('‚úÖ Showing Kite widget in slide cart - Button is black');
        }
      }
    });
  }
  
  /**
   * Initialize the Kite widget observer (only once)
   */
  function initializeKiteWidgetObserver() {
    // Prevent duplicate initialization
    if (isObserverInitialized && kiteWidgetObserver) {
      return;
    }
    
    // Clear any existing timeouts
    checkTimeoutIds.forEach(function(timeoutId) {
      clearTimeout(timeoutId);
    });
    checkTimeoutIds = [];
    
    // Disconnect existing observer if any
    if (kiteWidgetObserver) {
      kiteWidgetObserver.disconnect();
      kiteWidgetObserver = null;
    }
    
    // Check multiple times to catch Kite app loading
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 500));
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 1000));
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 2000));
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 3000));
    
    // Watch for changes ONLY in the slide cart container
    const cartContainer = document.querySelector('.cart-app-blocks') || 
                         document.querySelector('.r-side-cart') ||
                         document.querySelector('#custom-cart');
    
    if (cartContainer && !kiteWidgetObserver) {
      kiteWidgetObserver = new MutationObserver(function(mutations) {
        // Debounce: Only check if widget actually changed
        let shouldCheck = false;
        mutations.forEach(function(mutation) {
          if (mutation.type === 'childList' || 
              (mutation.type === 'attributes' && 
               (mutation.attributeName === 'class' || mutation.attributeName === 'style'))) {
            shouldCheck = true;
          }
        });
        
        if (shouldCheck) {
          checkAndHideMainDiv();
        }
      });
      
      kiteWidgetObserver.observe(cartContainer, {
        childList: true,
        subtree: true,
        attributes: true,
        attributeFilter: ['class', 'style']
      });
      
      isObserverInitialized = true;
      console.log('‚úÖ Kite widget observer initialized');
    }
  }
  
  /**
   * Re-check widget state (for cart updates) without reinitializing observer
   */
  function recheckKiteWidget() {
    // Clear previous timeouts
    checkTimeoutIds.forEach(function(timeoutId) {
      clearTimeout(timeoutId);
    });
    checkTimeoutIds = [];
    
    // Re-check widget state
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 300));
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 800));
    checkTimeoutIds.push(setTimeout(checkAndHideMainDiv, 1500));
  }
  
  // Initialize on page ready
  $(document).ready(function() {
    setTimeout(initializeKiteWidgetObserver, 500);
  });
  
  // Re-check when cart updates (don't reinitialize observer)
  $(document).on('cart:updated', function() {
    recheckKiteWidget();
  });
  
  // Also re-check when cart opens
  $(document).on('cart:opened', function() {
    recheckKiteWidget();
  });
})();

