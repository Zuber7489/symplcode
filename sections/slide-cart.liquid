}

.bundle-product-variants {
  display: flex;
  justify-content: center;
  gap: 4px;
  margin: 8px 0;
}

.variant-dot {
  cursor: pointer;
  transition: all 0.2s ease;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.variant-dot .dot {
  width: 16px;
  height: 16px;
  border: 2px solid #d1d5db;
  border-radius: 50%;
  background: #ffffff;
  transition: all 0.2s ease;
}

.variant-dot.selected .dot {
  border-color: #111827;
  background: #111827;
  box-shadow: 0 0 0 2px #fff, 0 0 0 3px #111827;
}

.variant-dot:hover .dot {
  transform: scale(1.1);
  border-color: #111827;
}

.variant-dot.out-of-stock .dot {
  opacity: 0.4;
  border-color: #d1d5db;
  background: #f3f4f6;
  position: relative;
}

.variant-dot.out-of-stock .dot::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 12px;
  height: 1px;
  background: #9ca3af;
  transform: translate(-50%, -50%) rotate(45deg);
}

.bundle-product-material {
  font-size: 14px;
  color: #996515;
  font-weight: 300;
  margin: 8px 0 0 0;
  text-align: center;
}

.add-to-bag-btn, .bundle-cart-btn {
  width: 100%;
  background: #2f6f6f;
  color: #ffffff;
  border: none;
  padding: 8px 16px;
  border-radius: 9999px;
  font-size: 12px;
  margin-top: 8px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  font-family: inherit;
  
  letter-spacing: 0.5px;
  position: relative;
}

.add-to-bag-btn:hover, .bundle-cart-btn:hover {
  background: #026068;
}

/* Disabled state for bundle add buttons */
.bundle-cart-btn.is-disabled,
.bundle-cart-btn[disabled] {
  background: #9ca3af !important;
  color: #ffffff !important;
  cursor: not-allowed !important;
  opacity: 1 !important;
}

.bundle-cart-btn.is-disabled:hover,
.bundle-cart-btn[disabled]:hover {
  background: #9ca3af !important;
  transform: none !important;
}

.add-to-bag-btn.is-loading, .bundle-cart-btn.is-loading {
  opacity: 0.7;
  pointer-events: none;
}

.add-to-bag-btn.is-loading::after, .bundle-cart-btn.is-loading::after {
  content: "";
  position: absolute;
  width: 12px;
  height: 12px;
  top: 50%;
  left: 50%;
  margin-left: -6px;
  margin-top: -6px;
  border: 2px solid #ffffff;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Loading states for quantity and remove buttons */
.quantity-btn.is-loading,
.cart-item-remove.is-loading {
  opacity: 0.7;
  pointer-events: none;
  position: relative;
}

.quantity-btn.is-loading::after,
.cart-item-remove.is-loading::after {
