        }
        
        targetIndex = Math.max(0, Math.min(totalCards - visibleCards, targetIndex));
        currentIndex = targetIndex;
        updateBundlePosition();
        
        setTimeout(() => {
          hasDragged = false;
        }, 550);
      });

