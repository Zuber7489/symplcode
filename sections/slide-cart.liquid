  transform: translate(-50%, -50%);
  border: 2px solid #6b7280;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  z-index: 1;
}

.quantity-btn.is-loading svg,
.cart-item-remove.is-loading svg {
  opacity: 0;
