// Debounced cart refresh function to prevent excessive refreshes
function debouncedCartRefresh() {
  // Clear existing timeout
  if (cartRefreshTimeout) {
    clearTimeout(cartRefreshTimeout);
  }
  
  // Only refresh if cart is open or we're returning from checkout
  var isCartOpen = $('.r-side-cart').hasClass('active') || $('body').hasClass('g-cart-open');
  var isReturningFromCheckout = document.referrer && document.referrer.includes('/checkout');
  
  if (isCartOpen || isReturningFromCheckout) {
    // Set new timeout with longer debounce to prevent excessive calls
    cartRefreshTimeout = setTimeout(function() {
      initializeCartStateWithValidation();
    }, 500); // Increased to 500ms debounce
  }
}

// Function to initialize cart state on page load with validation
function initializeCartStateWithValidation() {
  // Only validate if cart is actually open or if we're returning from checkout
  var isCartOpen = $('.r-side-cart').hasClass('active') || $('body').hasClass('g-cart-open');
  var isReturningFromCheckout = document.referrer && document.referrer.includes('/checkout');
  
  // Skip validation if cart is closed and we're not returning from checkout
  if (!isCartOpen && !isReturningFromCheckout) {
    return;
  }
  
  // Prevent rapid successive validations - minimum 3 seconds between checks
  var currentTime = new Date().getTime();
  if (currentTime - lastCartUpdateTime < 3000) {
    console.log('Skipping cart validation - too soon after last update');
    return;
  }
  
  // First, get fresh cart data to validate current state
  $.ajax({
    type: "GET",
    url: "/cart.js",
    dataType: "json",
    cache: false,
    success: function(cartData) {
      // Only check for significant mismatches, not minor differences
      var displayedCount = parseInt($('.cart-title').text().match(/\d+/)) || 0;
      var actualCount = cartData.item_count || 0;
      
      // Only refresh if there's a VERY significant mismatch (more than 2 items difference)
      // This prevents unnecessary refreshes from timing issues
      if (Math.abs(displayedCount - actualCount) > 2) {
        console.warn('Very significant cart state mismatch. Displayed:', displayedCount, 'Actual:', actualCount);
        lastCartUpdateTime = currentTime; // Update timestamp
        updateBundleProductsWithHTML();
      } else if (actualCount > 0 && Math.abs(displayedCount - actualCount) > 0) {
        // If there's a minor mismatch, just update counts without full refresh
        console.log('Minor cart mismatch, updating counts only');
        updateCartTotalsOnly(cartData);
        updateCartHeader(cartData.item_count);
      } else {
        // Cart is empty, ensure empty state is shown
        if (actualCount === 0 && displayedCount > 0) {
          showEmptyCartState();
        }
      }
    },
    error: function(xhr, status, error) {
      console.error('Error validating cart state:', error);
      // Do NOT fallback to full refresh on error - this can cause loops
    }
  });
}

// Function to initialize cart state on page load
function initializeCartState() {
  // Use validation-based approach instead of always doing full HTML refresh
  initializeCartStateWithValidation();
