      if (!loadingStartTime || (currentTime - loadingStartTime > 5000)) {
        $button.prop("disabled", false).removeClass("is-loading");
      }
    });
  }, 5000);
  
  // Only refresh cart state when user comes back from checkout (not on every focus)
  var lastPageUrl = document.referrer;
  var isReturningFromCheckout = false;
  var hasRefreshedFromCheckout = false; // Track if we've already refreshed
  
  // Check if user is returning from checkout page
  if (lastPageUrl && lastPageUrl.includes('/checkout')) {
    isReturningFromCheckout = true;
  }
  
  // DISABLED: These handlers were causing unwanted cart refreshes and closures
  // Cart refresh is now only triggered by explicit user actions
  
  // $(window).on('focus', function() {
  //   if (isReturningFromCheckout && !hasRefreshedFromCheckout) {
  //     debouncedCartRefresh();
  //     hasRefreshedFromCheckout = true;
  //   }
  // });
  
  // document.addEventListener('visibilitychange', function() {
  //   if (!document.hidden && isReturningFromCheckout && !hasRefreshedFromCheckout) {
  //     debouncedCartRefresh();
  //     hasRefreshedFromCheckout = true;
  //   }
  // });
  
  // Remove periodic cart sync checks - they cause unnecessary refreshes
  // The cart state is already validated on page load and cart operations
  
  // Add to Bag button handler for bundle products (only in cart)
  $(document).on('click', '.bundle-cart-btn', function(e) {
    e.preventDefault();
    e.stopPropagation(); // Prevent event bubbling
    e.stopImmediatePropagation(); // Prevent other handlers from running
    
    var $button = $(this);
    var variantId = $button.data('variant-id');
    var isAvailable = String($button.data('available')) === 'true';
    var quantity = 1; // Default quantity;
    
