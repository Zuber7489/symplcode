function updateItemPriceOnly($itemRow, quantity, cart) {
  // Find the specific item in cart data using dynamic line number
  var lineNumber = getCurrentLineNumber($itemRow);
  var cartItem = null;
  
  // Line numbers are 1-indexed, array is 0-indexed
  if (lineNumber && lineNumber <= cart.items.length) {
    cartItem = cart.items[lineNumber - 1];
  }
  
  if (cartItem) {
    // Update line price
    var $priceContainer = $itemRow.find('.cart-item-pricing');
    var $currentPrice = $priceContainer.find('.current-price');
    var $originalPriceTop = $priceContainer.find('.original-price-top');
    var $priceComparison = $priceContainer.find('.price-comparison');
    var $originalPrice = $priceContainer.find('.original-price');
    var $discountedPrice = $priceContainer.find('.discounted-price');
    var $savings = $priceContainer.find('.savings');
    var $couponCode = $priceContainer.find('.coupon-code');
    
    // Check if item has discount (compare_at_price > price)
    var hasDiscount = cartItem.original_price > cartItem.price;
    
    if (hasDiscount) {
      // Show discount pricing
      if ($originalPriceTop.length > 0) {
        $originalPriceTop.text(formatMoney(cartItem.original_line_price || cartItem.line_price)).show();
      }
      if ($priceComparison.length > 0) {
        $priceComparison.show();
        if ($originalPrice.length > 0) {
          $originalPrice.text(formatMoney(cartItem.original_price * cartItem.quantity));
        }
        if ($discountedPrice.length > 0) {
          $discountedPrice.text(formatMoney(cartItem.line_price));
        }
      }
      if ($savings.length > 0) {
        var itemSavings = (cartItem.original_price - cartItem.price) * cartItem.quantity;
        $savings.text('(Save ' + formatMoney(itemSavings) + ')').show();
      }
      // Hide current price when showing discount
      if ($currentPrice.length > 0) {
        $currentPrice.hide();
      }
    } else {
      // Hide discount pricing and show regular price
      if ($originalPriceTop.length > 0) {
        $originalPriceTop.hide();
      }
      if ($priceComparison.length > 0) {
        $priceComparison.hide();
      }
      if ($savings.length > 0) {
        $savings.hide();
      }
      if ($couponCode.length > 0) {
        $couponCode.hide();
      }
      
      // Show the current price when no discount
      if ($currentPrice.length > 0) {
        $currentPrice.text(formatMoney(cartItem.line_price)).show();
      } else {
        // If current price element doesn't exist, create it
        var priceHtml = '<div class="current-price">' + formatMoney(cartItem.line_price) + '</div>';
        $priceContainer.append(priceHtml);
      }
    }
  }
  
  // Recalculate and update total savings in checkout section
  updateTotalSavingsDisplay(cart);
}

