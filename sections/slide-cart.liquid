// Function to fetch fresh variant availability from Shopify API
function refreshBundleProductAvailability() {
  const bundleProducts = document.querySelectorAll('.bundle-product');
  if (bundleProducts.length === 0) {
    return;
  }
  
  // Collect all unique product handles and IDs
  const productDataMap = {};
  bundleProducts.forEach(function(product) {
    const productId = product.dataset.productId;
    const productHandle = product.dataset.productHandle;
    if (productId && productHandle && !productDataMap[productId]) {
      productDataMap[productId] = {
        handle: productHandle,
        id: productId
      };
    }
  });
  
  const productIds = Object.keys(productDataMap);
  if (productIds.length === 0) {
    return;
  }
  
  // Fetch fresh product data for each product
  let completedRequests = 0;
  const totalRequests = productIds.length;
  
  productIds.forEach(function(productId) {
    const productInfo = productDataMap[productId];
    const productHandle = productInfo.handle;
    
    // Fetch product data from Shopify API using handle
    $.ajax({
      type: "GET",
      url: "/products/" + productHandle + ".js",
      dataType: "json",
      cache: false,
      headers: {
        'Cache-Control': 'no-cache'
      },
      success: function(productData) {
        // Update the variant data in window object
        if (productData && productData.variants) {
          const variantData = [];
          productData.variants.slice(0, 4).forEach(function(variant) {
            variantData.push({
              id: variant.id,
              title: variant.title,
              price: variant.price,
              available: variant.available,
              fabric: variant.option1 || '',
              size: variant.option2 || '',
              featured_image: {
                url: variant.featured_image || productData.featured_image || '',
                alt: variant.title || productData.title || ''
              }
            });
          });
          
          // Update the global variant data
          window[`bundleProductVariants_${productId}`] = variantData;
          
          // Update UI for this product
          updateBundleProductAvailabilityUI(productId, variantData);
        }
        
        completedRequests++;
        if (completedRequests === totalRequests) {
          console.log('‚úÖ Refreshed availability for all bundle products');
        }
      },
      error: function(xhr, status, error) {
        console.warn('Error fetching product availability for product ' + productHandle + ':', error);
        completedRequests++;
      }
    });
  });
}

