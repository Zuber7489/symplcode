}

.cart-item-remove-container {
  grid-column: 5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-item-remove {
  background: none;
  border: none;
  color: #9ca3af;
  cursor: pointer;
  border-radius: 50%;
