  // Only initialize cart state if cart is open or we're returning from checkout
  var isCartOpen = $('.r-side-cart').hasClass('active') || $('body').hasClass('g-cart-open');
  var isReturningFromCheckout = document.referrer && document.referrer.includes('/checkout');
  
  if (isCartOpen || isReturningFromCheckout) {
    // Initialize cart state on page load with validation
    initializeCartStateWithValidation();
  }
  
  // Initialize bundle functionality if cart is open OR has items
  var hasCartItems = $('.cart-item').length > 0;
  if (isCartOpen || hasCartItems) {
    setTimeout(() => {
      initializeBundleFunctionality();
      // Refresh availability on page load to get fresh stock data
      setTimeout(function() {
        refreshBundleProductAvailability();
      }, 500);
    }, 200); // Increased delay to ensure DOM is ready
  }
  
  // Cart close functionality
  $(document).on('click', '.cart-close, .cart-overlay', function(e) {
    e.preventDefault();
    e.stopPropagation();
    
    // Remove active class from cart
    $('.r-side-cart').removeClass('active');
    
    // Unlock body scroll using the scroll lock manager
    bodyScrollLock.unlock();
    
    // Double-check: Force remove any stuck body classes after a short delay
    setTimeout(function() {
      if (!$('.r-side-cart').hasClass('active')) {
        $('body').removeClass('g-cart-open');
      }
    }, 50);
  });
  
  // Initialize on cart open
  $(document).on('click', '.cart-icon', function() {
    // Lock body scroll when cart opens
    bodyScrollLock.lock();
    
    // Only refresh cart state if we haven't already done so recently
    var lastRefreshTime = window.lastCartRefreshTime || 0;
    var currentTime = new Date().getTime();
    
    // Increased debounce to 10 seconds to prevent excessive refreshes when repeatedly opening cart
    if (currentTime - lastRefreshTime > 10000) {
      initializeCartStateWithValidation();
      window.lastCartRefreshTime = currentTime;
    }
    
    // Initialize bundle functionality when cart opens
    setTimeout(() => {
      initializeBundleFunctionality();
      // Refresh availability after initialization to get fresh stock data
      setTimeout(function() {
        refreshBundleProductAvailability();
      }, 400);
    }, 150); // Slight delay to ensure cart is fully open
  });
  
  // Also watch for when cart becomes active (in case opened by other means)
  var cartObserver = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
      if (mutation.attributeName === 'class') {
        var $cart = $('.r-side-cart');
        if ($cart.hasClass('active') && !$('body').hasClass('g-cart-open')) {
          bodyScrollLock.lock();
        } else if (!$cart.hasClass('active') && $('body').hasClass('g-cart-open')) {
          bodyScrollLock.unlock();
          // Additional safety: ensure body is truly unlocked
          setTimeout(function() {
            if (!$cart.hasClass('active')) {
              $('body').removeClass('g-cart-open');
            }
          }, 100);
        }
      }
    });
  });
  
  // Start observing the cart element for class changes
  var cartElement = document.querySelector('.r-side-cart');
  if (cartElement) {
    cartObserver.observe(cartElement, { attributes: true });
  }
  
  // Close cart with ESC key
  $(document).on('keydown', function(e) {
    if (e.key === 'Escape' || e.keyCode === 27) {
      if ($('.r-side-cart').hasClass('active')) {
        e.preventDefault();
        $('.r-side-cart').removeClass('active');
        bodyScrollLock.unlock();
      }
    }
  });
  
  // Safety check: Ensure body is never stuck in locked state
  setInterval(function() {
    var isCartActive = $('.r-side-cart').hasClass('active');
    var isBodyLocked = $('body').hasClass('g-cart-open');
    
    // If body is locked but cart is not active, force unlock
    if (isBodyLocked && !isCartActive) {
      console.log('Safety unlock: Removing stuck body lock');
      $('body').removeClass('g-cart-open');
    }
  }, 500); // Check every 500ms
  
  // Initialize after cart refresh
  $(document).on('cart:refresh-complete', function() {
    // Clear any stuck loading states immediately
    $('.bundle-cart-btn').prop("disabled", false).removeClass("is-loading");
  });
  

  
  // Safety check for stuck loading states - runs every 5 seconds
