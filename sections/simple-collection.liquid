{% assign collection = collections[section.settings.collection]%} 
{% if section.settings.banner %}
<div data-aos="fade-up"
     data-aos-duration="3000" class="hero_banner">
  
  <div class="banner-wrap-img">
                       <img src="{{collection.image | img_url: 'master' }}" class="img-fluid" />
                      </div>
  
  
                <div class="container">
                    <div class="hero_b">
                        <div class="hero_banner_wrap">
                            <div class="main_heading_wrap">
                                <h1>{{section.settings.heading}}</h1>
                              {{section.settings.subheading}}
                          </div>
                        </div>
                    </div>
                </div>
            </div>
 {% endif %}

            <section>
                <div class="avilable_s_bg av_bg">
                    <div class="container">
                        <div class="main_heading_wrap">
                       
                            <h3 class="blk">{{section.settings.subheading2}}</h3>
                             
                        </div>

                         

                        <div class="p_crousel2">
                          
           {% for product in collection.products %}
  
        {%- comment %}<locksmith:fd2c>{% endcomment -%}
          {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
        {%- comment %}</locksmith:fd2c>{% endcomment -%}
  
        {% include 'product-grid-item' %}
              {% endfor %}
                        
                        </div>

                        
                  </div>
                </div>
            </section>

   
 

 
<script>
    	
  	/*-- Collection images Show on swatch hover --*/
   $('.product-color .thumb-dd').click(function() {
      var id= $(this).attr('data-id');
       console.log(id);
    
    
      var thumb_src = $(this).closest('.variant-dd').find('.img-variant > img').attr('src');
              var pric = $(this).closest('.variant-dd').find('.img-variant').attr('data-price');
       console.log(thumb_src);
      $(this).parents('.single-collection').find('a img').attr('src',thumb_src);
      
      var path = $(this).parents('.product-details').find('a.prod-heading').attr('data-href');
      $(this).parents('.product-details').siblings('.ci').find('a').attr('href',path+'?variant='+id);
      $(this).parents('.product-details').find('a.prod-heading').attr('href',path+'?variant='+id);
             $(this).parents('.single-collection').find('.pra').html(pric);
    });
</script>

<style>
  .swatch input{display:none;}
.swatch label{float:left;    width: 26px;
  height: 26px;
  border: 3px solid #dad7d7;
  border-radius: 50%; margin:0;}
.swatch input:checked + label{box-shadow:rgb(216, 216, 216) 0px 0px 0px 1px;}
.swatch .swatch-element{float:left;-webkit-transform:translateZ(0);-webkit-font-smoothing:antialiased;margin:0px 10px 0 0;position:relative;}


.bg--black {
  background-color: rgb(0, 0, 0);
}
.bg--red {
  background-color: rgb(149, 1, 10) ;
}
.bg--brown {
  background-color: rgb(133, 73, 10) ;
}
  .collection-info .swatch-wrap.swatch {
    display: flex;
    justify-content: center;
    margin: 30px auto;
}
  {% unless collection.handle == 'tees'%}
  
  {% endunless %}
  .p_crousel2 .pr_heading h6 {
    
    min-height: 54px;
}
</style>

{% schema %}
{
  "name": "main-collection-banner",
 
  
    "settings": [
  {
      "type": "checkbox",
      "id": "banner",
      "label": "enable banner"
    },
 {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
 
 {
      "type": "richtext",
      "id": "subheading",
      "label": "text"
    },
 {
      "type": "textarea",
      "id": "subheading2",
      "label": "subheading 2"
    },
 {
      "type": "collection",
      "id": "collection",
      "label": "select collection"
    }


 
    
  ],

  
  "presets": [
    {
      "name": "simple-collection"
    }
  ]
}
{% endschema %}
