<!-- as_featured_in.liquid -->
<div class="as-featured-in-section">
  <div class="container">
    <h3 class="featured-title">{{ section.settings.title }}</h3>
    
    <div class="logo-marquee-container">
      <div class="logo-marquee">
        <div class="logo-track">
          {% for block in section.blocks %}
            {% if block.type == 'logo' %}
              <div class="logo-item" {{ block.shopify_attributes }}>
                {% if block.settings.logo_link != blank %}
                  <a href="{{ block.settings.logo_link }}" target="_blank" rel="noopener" class="logo-link">
                {% endif %}
                
                {% if block.settings.logo_image != blank %}
                  <img 
                    src="{{ block.settings.logo_image | img_url: 'master' }}" 
                    alt="{{ block.settings.logo_name | escape }}"
                    class="logo-image"
                    loading="lazy"
                  >
                {% else %}
                  <span class="logo-text">{{ block.settings.logo_name }}</span>
                {% endif %}
                
                {% if block.settings.logo_link != blank %}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Clone of the track for seamless looping -->
        <div class="logo-track">
          {% for block in section.blocks %}
            {% if block.type == 'logo' %}
              <div class="logo-item" {{ block.shopify_attributes }}>
                {% if block.settings.logo_link != blank %}
                  <a href="{{ block.settings.logo_link }}" target="_blank" rel="noopener" class="logo-link">
                {% endif %}
                
                {% if block.settings.logo_image != blank %}
                  <img 
                    src="{{ block.settings.logo_image | img_url: 'master' }}" 
                    alt="{{ block.settings.logo_name | escape }}"
                    class="logo-image"
                    loading="lazy"
                  >
                {% else %}
                  <span class="logo-text">{{ block.settings.logo_name }}</span>
                {% endif %}
                
                {% if block.settings.logo_link != blank %}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .as-featured-in-section {
    background-color: #A3C2C6;
    padding: 24px 0;
    overflow: hidden;
    width: 100%;
  }
  
  .container {
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }
  
  .featured-title {
    font-size: 18px;
    font-weight: 500;
    text-align: center;
    color: #000000;
    margin: 0 0 30px 0;
  }
  
  .logo-marquee-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  
  .logo-marquee {
    display: flex;
    width: 100%;
    overflow: hidden;
  }
  
  .logo-track {
    display: flex;
    animation: marquee {{ section.settings.scroll_speed | default: 30 }}s linear infinite;
    will-change: transform;
  }
  
  .logo-item {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 40px;
  }
  
  .logo-link {
    display: block;
    text-decoration: none;
  }
  
  .logo-image {
    max-height: 27px;
    width: auto;
    object-fit: contain;
  }
  
  .logo-text {
    font-size: 20px;
    font-weight: 600;
    color: #000000;
  }
  
  /* Pause animation on hover */
  .logo-marquee:hover .logo-track {
    animation-play-state: paused;
  }
  
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  
  /* Desktop specific styles */
  @media (min-width: 768px) {
    .as-featured-in-section {
      margin-bottom: 30px; /* Added 90px padding bottom for desktop only */
    }
  }
  
  /* Responsive styles */
  @media (max-width: 767px) {
    .as-featured-in-section {
      padding: 20px 0;
    }
    
    .featured-title {
      font-size: 16px;
      margin-bottom: 20px;
    }
    
    .logo-item {
      padding: 0 25px;
    }
    
    .logo-image {
      max-height: 25px;
    }
    
    .logo-text {
      font-size: 18px;
    }
  }
</style>

