  }

  @font-face {
    font-family: 'Neue Haas Display';
    src: url('{{ "NeueHaasDisplayLight.ttf" | asset_url }}') format('truetype');
    font-weight: 300;
    font-style: normal;
  }

  @font-face {
    font-family: 'Neue Haas Display';
