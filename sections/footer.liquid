      vertical-align: top;
      margin-bottom: 20px;
      text-align: center;
      border-bottom: none;
    }
    
    .footer__titled {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 10px;
      padding-bottom: 0;
      border-bottom: none;
      cursor: default;
      color: #000;
      text-align: left;
      font-family: 'Neue Haas Display', sans-serif;
    }
    
    .footer__linklist {
      max-height: none;
      overflow: visible;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    
    .footer__link {
      font-size: 14px;
      padding: 4px 0;
      letter-spacing: 0.5px;
      line-height: 20px;
    }
    
    .footer__bottom {
      display:none !important;
    }
    
    .footer__bottom-right {
      margin-top: 15px;
      align-self: center;
    }
    
    .footer__policies {
      flex-direction: column;
      gap: 10px;
      align-items: center;
    }
    
    .footer__copyright {
      text-align: center;
      margin-top: 10px;
    }
    
    /* Center the localization flags */
    .footer__localization {
      justify-content: center;
      margin: 0 auto;
    }
  }
</style>

