    .footer__newsletter-input-wrapper {
      border: 1px solid #e8e8e8;
      margin-bottom: 15px;
      max-width: 400px;
      margin-left: auto;
      margin-right: auto;
   
    }
    
    .footer__newsletter-input {
      padding: 12px 15px;
      border-radius: 25px;
    }
    
    .footerbtn {
