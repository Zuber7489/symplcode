<script>
  // Wrap in IIFE to prevent conflicts with other hero sections
  (function() {
    'use strict';
    
    // Unique namespace for hero section two
    const HeroSectionTwo = {
      init: function() {
        this.heroSection = document.querySelector('.dynamic-hero-section-two');
        if (!this.heroSection) return;

        this.slider = this.heroSection.querySelector('.dynamic-hero-slider-two');
        this.slides = this.heroSection.querySelectorAll('.dynamic-hero-slide-two');
        this.prevBtn = document.querySelector('.hero-two-slider-prev');
        this.nextBtn = document.querySelector('.hero-two-slider-next');
        this.progressBar = document.querySelector('.hero-two-slider-progress');
        
        this.currentSlide = 0;
        this.autoSlideInterval = null;
        this.autoSlide = this.heroSection.dataset.autoSlideTwo === 'true';
        this.slideInterval = parseInt(this.heroSection.dataset.slideIntervalTwo) || 5000;

        // Touch/swipe variables
        this.touchStartX = 0;
        this.touchEndX = 0;
        this.touchStartY = 0;
        this.touchEndY = 0;
        this.isSwiping = false;
        this.minSwipeDistance = 50;
        
        // Auto-slide pause variables
        this.userInteractionTimeout = null;
        this.userInteractionDelay = 3000;

        this.initializeSlider();
        this.bindEvents();
      },

      initializeSlider: function() {
        // Show first slide immediately
        if (this.slides.length > 0) {
          this.slides[0].classList.add('active');
          this.slides[0].style.zIndex = '2';
          this.currentSlide = 0;
        }
        
        // Update progress bar
        this.updateProgressBar();
        
        // Update navigation state
        this.updateNavigationState();
        
        // Start auto-slide if enabled and multiple slides
        if (this.autoSlide && this.slides.length > 1) {
          this.startAutoSlide();
        }
      },

      showSlide: function(index) {
        // Remove active class from all slides
        this.slides.forEach(slide => {
          slide.classList.remove('active');
          slide.style.zIndex = '0';
        });
        
        // Add active class to current slide
        if (this.slides[index]) {
          this.slides[index].classList.add('active');
          this.slides[index].style.zIndex = '2';
        }
        
        this.currentSlide = index;
        this.updateProgressBar();
        this.updateNavigationState();
      },

      updateProgressBar: function() {
        if (this.progressBar && this.slides.length > 1) {
          const progress = ((this.currentSlide + 1) / this.slides.length) * 100;
          this.progressBar.style.width = progress + '%';
        }
      },

      updateNavigationState: function() {
        if (this.prevBtn && this.nextBtn) {
          // Disable previous button on first slide
          if (this.currentSlide === 0) {
            this.prevBtn.disabled = true;
            this.prevBtn.style.opacity = '0.3';
            this.prevBtn.style.cursor = 'not-allowed';
          } else {
            this.prevBtn.disabled = false;
            this.prevBtn.style.opacity = '1';
            this.prevBtn.style.cursor = 'pointer';
          }
          
          // Disable next button on last slide
          if (this.currentSlide === this.slides.length - 1) {
            this.nextBtn.disabled = true;
            this.nextBtn.style.opacity = '0.3';
            this.nextBtn.style.cursor = 'not-allowed';
          } else {
            this.nextBtn.disabled = false;
            this.nextBtn.style.opacity = '1';
            this.nextBtn.style.cursor = 'pointer';
          }
        }
      },

      nextSlide: function() {
        const next = (this.currentSlide + 1) % this.slides.length;
        this.showSlide(next);
      },

      prevSlide: function() {
        const prev = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
        this.showSlide(prev);
      },

      startAutoSlide: function() {
        // Clear any existing timeout
        if (this.userInteractionTimeout) {
          clearTimeout(this.userInteractionTimeout);
          this.userInteractionTimeout = null;
        }
        
        this.autoSlideInterval = setInterval(() => {
          this.nextSlide();
        }, this.slideInterval);
      },

      stopAutoSlide: function() {
        if (this.autoSlideInterval) {
          clearInterval(this.autoSlideInterval);
        }
      },

      pauseAutoSlideTemporarily: function() {
        this.stopAutoSlide();
        
        // Clear any existing timeout
        if (this.userInteractionTimeout) {
          clearTimeout(this.userInteractionTimeout);
        }
        
        // Resume auto-slide after delay
        this.userInteractionTimeout = setTimeout(() => {
          if (this.autoSlide && this.slides.length > 1) {
            this.startAutoSlide();
          }
        }, this.userInteractionDelay);
      },

      handleSwipe: function() {
        const swipeDistance = this.touchEndX - this.touchStartX;
        const verticalDistance = Math.abs(this.touchEndY - this.touchStartY);
        const horizontalDistance = Math.abs(swipeDistance);

        // Only register horizontal swipes if they're more horizontal than vertical
        // and meet the minimum distance threshold
        if (horizontalDistance > verticalDistance && horizontalDistance > this.minSwipeDistance) {
          if (swipeDistance > 0) {
            // Swipe right - go to previous slide
            this.prevSlide();
          } else {
            // Swipe left - go to next slide
            this.nextSlide();
          }
          
          // Pause auto-slide temporarily after user interaction
          if (this.autoSlide) {
            this.pauseAutoSlideTemporarily();
          }
        }
      },

      handleTouchStart: function(e) {
        this.touchStartX = e.touches[0].clientX;
        this.touchStartY = e.touches[0].clientY;
        this.isSwiping = false;
        
        // Stop auto-slide during touch
        if (this.autoSlide) {
          this.stopAutoSlide();
        }
      },

      handleTouchMove: function(e) {
        if (!this.isSwiping) {
          this.isSwiping = true;
        }
      },

      handleTouchEnd: function(e) {
        this.touchEndX = e.changedTouches[0].clientX;
        this.touchEndY = e.changedTouches[0].clientY;
        
        if (this.isSwiping) {
          this.handleSwipe();
        } else {
          // If no swipe was detected, resume auto-slide after delay
          if (this.autoSlide) {
            this.pauseAutoSlideTemporarily();
          }
        }
      },

      handleKeydown: function(e) {
        // Only handle keyboard events if this hero section is in view
        const rect = this.heroSection.getBoundingClientRect();
        const isInView = rect.top < window.innerHeight && rect.bottom > 0;
        
        if (!isInView) return;
        
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          this.prevSlide();
          if (this.autoSlide) {
            this.pauseAutoSlideTemporarily();
          }
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          this.nextSlide();
          if (this.autoSlide) {
            this.pauseAutoSlideTemporarily();
          }
        }
      },

      bindEvents: function() {
        const self = this;

        // Touch event listeners
        if (this.slider) {
          this.slider.addEventListener('touchstart', function(e) {
            self.handleTouchStart(e);
          }, { passive: true });
          
          this.slider.addEventListener('touchmove', function(e) {
            self.handleTouchMove(e);
          }, { passive: true });
          
          this.slider.addEventListener('touchend', function(e) {
            self.handleTouchEnd(e);
          }, { passive: true });
        }

        // Button event listeners
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', function() {
            self.prevSlide();
            if (self.autoSlide) {
              self.pauseAutoSlideTemporarily();
            }
          });
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', function() {
            self.nextSlide();
            if (self.autoSlide) {
              self.pauseAutoSlideTemporarily();
            }
          });
        }

        // Hover event listeners
        if (this.slider) {
          this.slider.addEventListener('mouseenter', function() {
            self.stopAutoSlide();
          });
          
          this.slider.addEventListener('mouseleave', function() {
            if (self.autoSlide) {
              self.startAutoSlide();
            }
          });
        }

        // Keyboard navigation with scoped event handling
        document.addEventListener('keydown', function(e) {
          self.handleKeydown(e);
        });
      },

      maintainAspectRatio: function() {
        const self = this;
        document.querySelectorAll('.dynamic-hero-slide-two').forEach(slide => {
          const mediaWrapper = slide.querySelector('.hero-two-media-wrapper');
          const media = slide.querySelector('.hero-two-media-content, .hero-two-video');
          const heroSection = slide.closest('.dynamic-hero-section-two');
          
          if (!media) return;
          
          // Use natural dimensions for images, videoWidth/Height for videos
          const isVideo = media.tagName.toLowerCase() === 'video';
          let naturalWidth = isVideo ? media.videoWidth : media.naturalWidth;
          let naturalHeight = isVideo ? media.videoHeight : media.naturalHeight;
          
          // If natural dimensions aren't available yet, use the current image dimensions
          if ((!naturalWidth || !naturalHeight) && media.offsetWidth && media.offsetHeight) {
            naturalWidth = media.offsetWidth;
            naturalHeight = media.offsetHeight;
          }
          
          if (naturalWidth && naturalHeight) {
            const aspectRatio = naturalWidth / naturalHeight;
            const containerWidth = mediaWrapper.offsetWidth;
            const calculatedHeight = containerWidth / aspectRatio;
            
            // Set the height on both the media wrapper and the slide
            mediaWrapper.style.height = calculatedHeight + 'px';
            slide.style.height = calculatedHeight + 'px';
            
            // Also update the hero section height if it exists
            if (heroSection) {
              heroSection.style.height = calculatedHeight + 'px';
            }
          }
        });
      }
    };

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        HeroSectionTwo.init();
      });
    } else {
      HeroSectionTwo.init();
    }

    // Aspect ratio maintenance
    const maintainAspectRatioTwo = function() {
      HeroSectionTwo.maintainAspectRatio();
    };

    // Run on load and window resize
    window.addEventListener('load', maintainAspectRatioTwo);
    window.addEventListener('resize', maintainAspectRatioTwo);
    
    // Also run when images/videos are loaded to ensure proper sizing
    document.querySelectorAll('.hero-two-media-content, .hero-two-video').forEach(media => {
      media.addEventListener('load', maintainAspectRatioTwo);
      if (media.tagName.toLowerCase() === 'video') {
        media.addEventListener('loadedmetadata', maintainAspectRatioTwo);
      }
    });
  })();
