                		{% assign is_color = true %}
                        {% assign color_pos = option_index %}
                	{% endif %}
               {% if downcased_option contains 'size' or downcased_option contains 'colour' or downcased_option contains 'metal' %}
                		{% assign is_size = true %}
                        
                	{% endif %}
                
                	{% assign values = '' %}
                		{% for variant in product.variants %}
