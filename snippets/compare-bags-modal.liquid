  const buttons = document.querySelectorAll('[data-compare-button="true"], #compareBtnMobile, #compareBtnDesktop, .comparedesktopbtn, .comparemobilebtn');
  
  buttons.forEach(btn => {
    if (!btn) return; // Skip if button is null
    
